<div class="task">
  <%= form_for [:complete, task.task_list, task] do |f| %>
    <%= f.submit "Complete", class: "complete-button" %>
  <% end %>
  <span class="task-description"><%= link_to task.description, edit_task_list_task_path(task.task_list, task) %></span>
  <span class="task-due">
    (<%= distance_of_time_in_words(Time.now, task.due_date) %>)
  </span>
</div>
